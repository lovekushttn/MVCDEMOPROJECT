@model Employee

@{
    var emp = Model;
    ViewBag.title = $"Employees Detail - {emp.FirstName} {emp.LastName}";
}

<!DOCTYPE html>

    <div>
        <h1> Employee </h1>
        <h2>Id</h2> : @emp.Id
        <h2>Name</h2> : @string.Format("{0} {1}", emp.FirstName, emp.LastName)
        <h6><a href="/Home/Index">Back to home</a></h6>
    </div>
